#!/usr/bin/env bash

PID_FILE="/var/run/my_process.pid"
PROCESS_SCRIPT="$(pwd)/manage_my_process"

case "$1" in
  start)
    if [ -f "$PID_FILE" ] && kill -0 "$(cat "$PID_FILE")" 2>/dev/null; then
      echo "Process is currently running with PID $(cat $PID_FILE)"
    else
      "$PROCESS_SCRIPT" &
      echo $! > "$PID_FILE"
      echo "manage_my_process launched"
    fi
    ;;
  stop)
    if [ -f "$PID_FILE" ]; then
      if kill -0 "$(cat "$PID_FILE")" 2>/dev/null; then
        kill "$(cat "$PID_FILE")"
        echo "manage_my_process stopped"
      else
        echo "Process is not running, but PID file exists"
      fi
      rm -f "$PID_FILE"
    else
      echo "Missing PID file. The process may not be running."
    fi
    ;;
  restart)
    if [ -f "$PID_FILE" ] && kill -0 "$(cat "$PID_FILE")" 2>/dev/null; then
      kill "$(cat "$PID_FILE")"
      rm -f "$PID_FILE"
    fi
    "$PROCESS_SCRIPT" &
    echo $! > "$PID_FILE"
    echo "manage_my_process restarted"
    ;;
  *)
    echo "Expected arguments: start, stop, or restart"
    exit 1
    ;;
esac
